<div class="container mt-5">
    <div class="row">
        {{#each contacts}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{name}}
                        </h3>
                        <hr>
                        <div class="card-body">
                            {{number}}
                        </div>
                        <a href="/contacts/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="/contacts/edit/{{id}}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There aren't contacts saved yet</p>
                    <form action="/contacts/add" method="GET">
                        <input type="hidden" value="{{user.id}}" name="user_id">
                        <button>Create one</button>
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
</div>