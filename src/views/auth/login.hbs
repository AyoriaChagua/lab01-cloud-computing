<div class="container px-3">
    <div class="d-flex align-items-center justify-content-center" style="height: 90vh;">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h2 class="text-center">ENTER WITH YOUR ACCOUNT</h2>
      <div class="d-flex align-items-center justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <p class="m-5 text-success">{{success}}</p>
            <p class="m-5 text-success">{{error}}</p>
            <form method="POST" action="/login">
                <div class="form-group mt-4">
                    <input type="text" class="form-control" name="name" placeholder="Name" autofocus>
                </div>
                <div class="form-group  mt-4">
                    <input type="password" class="form-control" name="password"  placeholder="Password">
                </div>
                <div class="form-group  mt-4 d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>